# application configuration
APP_LOG_LEVEL=debug

# database configuration
DB_DSN=host=localhost user=postgres password=postgres dbname=app_db port=5432 sslmode=disable
DB_LOG_LEVEL=info

# http server configuration
HTTP_ADDR=:8080

# jwt configuration
# important: change this to a secure random string in production!
JWT_SECRET=your-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=24h

# storage configuration

# public bucket - for permanent/processed files (manga covers, etc.)
# for local storage:
# PUBLIC_STORAGE_TYPE=local
# PUBLIC_STORAGE_BASE_PATH=run/upload/public

# for minio:
PUBLIC_STORAGE_TYPE=minio
PUBLIC_MINIO_ENDPOINT=localhost:9000
PUBLIC_MINIO_ACCESS_KEY_ID=minioadmin
PUBLIC_MINIO_SECRET_ACCESS_KEY=minioadmin
PUBLIC_MINIO_BUCKET_NAME=mp-api-public
PUBLIC_MINIO_USE_SSL=false

# temporary bucket - for uploaded files before processing
# for local storage:
# TEMPORARY_STORAGE_TYPE=local
# TEMPORARY_STORAGE_BASE_PATH=run/upload/temp

# for minio:
TEMPORARY_STORAGE_TYPE=minio
TEMPORARY_MINIO_ENDPOINT=localhost:9000
TEMPORARY_MINIO_ACCESS_KEY_ID=minioadmin
TEMPORARY_MINIO_SECRET_ACCESS_KEY=minioadmin
TEMPORARY_MINIO_BUCKET_NAME=mp-api-temp
TEMPORARY_MINIO_USE_SSL=false

# cleanup; temporary file cleanup configuration
CLEANUP_INTERVAL=1h
TEMPORARY_FILE_TTL=24h